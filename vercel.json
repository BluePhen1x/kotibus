{
  "version": 2,
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/checkout",
      "dest": "/api/checkout.js",
      "methods": ["POST"]
    },
    {
      "src": "/data/products.json",
      "dest": "/data/products.json"
    },
    {
      "src": "/",
      "dest": "/landing.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
